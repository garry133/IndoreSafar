            <form style="border: thin whitesmoke solid; margin: 20px;padding: 20px;"
                action="/campgrounds/<%=campground_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <h1>Edit Comment</h1>
                <div class="form-group">
                    <label for="inlineFormInputGroup">Comment</label>
                    <input class="form-control" type="text" name="comment[text]" id="inlineFormInputGroup"
                        value="<%= comment.text %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
