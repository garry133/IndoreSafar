<%- include("../partials/header") %>
    <br>
    <div class="container">
        <div>
            <h1 style="color: aliceblue;">Edit Comment
            </h1>
            <br>
            <div style="width: 30%; margin: 0;">
                <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-default">Submit!</button>
                    </div>
                </form>
            </div>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>

    <%- include("../partials/footer") %>